<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:component="clr-namespace:Barbar_Salon.Views.Components" 
             x:DataType="component:ButtonComponent"
             x:Class="Barbar_Salon.Views.Components.ButtonComponent">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <StackLayout>
                <Button Margin="110"                         WidthRequest="207"                         HeightRequest="46"                Text= "{TemplateBinding NameButton}"                TextColor="#FFFFFF"                FontAttributes="Bold"                BackgroundColor="#603D8F"                CornerRadius="20"                Font="Segoe UI"                FontSize="16"                Command="{TemplateBinding CommandParameter}">                </Button>
            </StackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>