<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewcom="clr-namespace:Barbar_Salon.Views.Components" x:DataType="viewcom:NavigationComponent"
             x:Class="Barbar_Salon.Views.Components.NavigationComponent">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <StackLayout>
                <Frame BackgroundColor="#FFFFFF" >
                    <StackLayout Orientation="Horizontal" >
                        <ImageButton HorizontalOptions="Start"  Margin="-10,0,-15,0" BackgroundColor="#FFFFFF" HeightRequest="20"  WidthRequest="25"  Source="arrowleft.png" Command="{TemplateBinding CommandParameter}" IsVisible="{TemplateBinding isVisible}"  ></ImageButton>

                        <Label   HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"   Text= "{TemplateBinding Titles}" FontSize="16" TextColor="#0E0909"  ></Label>

                    </StackLayout>
                       </Frame>
            </StackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>