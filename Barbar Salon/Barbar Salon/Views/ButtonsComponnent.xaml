<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barbar_Salon.Views.ButtonsComponnent">
    <StackLayout VerticalOptions="Center" x:Name="Accept">

        <Grid  HeightRequest="80" WidthRequest="200" HorizontalOptions="Center">
            <Button Margin="20"  
                Text="Accept"
                TextColor="#FFFFFF"
                FontSize = "16"
                FontAttributes ="Italic"
                BackgroundColor="#603D8F"
                CornerRadius="20">
            </Button>
        </Grid>

        <StackLayout x:Name="Refused"
            VerticalOptions="Center">
            <Grid  HeightRequest="80" WidthRequest="300" HorizontalOptions="Center">
                <Button Margin="20"
                Text="Refused"
                FontSize="16"
                TextColor="#0F0000"
                FontAttributes ="Italic"
                BackgroundColor="#F2F2F2"
                CornerRadius="20">
                </Button>
            </Grid>
        </StackLayout>
    </StackLayout>
</ContentPage>